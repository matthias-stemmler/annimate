{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": [
        "bump",
        "digest",
        "lockFileMaintenance",
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "rollback",
        "replacement"
      ],
      "groupName": "NPM dependencies non-major",
      "groupSlug": "npm-non-major"
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": [
        "bump",
        "digest",
        "lockFileMaintenance",
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "rollback",
        "replacement"
      ],
      "groupName": "NPM dev dependencies non-major",
      "groupSlug": "npm-dev-non-major"
    },
    {
      "matchPackageNames": ["eslint"],
      "allowedVersions": "<=8",
      "description": "eslint-plugin-query does not work with eslint v9"
    },
    {
      "matchPackageNames": ["graphannis", "graphannis-core"],
      "groupName": "graphANNIS monorepo",
      "groupSlug": "graphannis-monorepo"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github\\/workflows\\/.*\\.yml$"],
      "matchStrings": [
        "\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s*depName=(?<depName>.*?)\\s*\\n.*?:\\s*(?<currentValue>.*)\\s*"
      ]
    }
  ]
}
